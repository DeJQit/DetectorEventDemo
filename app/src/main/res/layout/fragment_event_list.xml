<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="eventData"
            type="com.dejqit.detectoreventdemo.model.EventContent.Event" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/eventType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="@{eventData.type}"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/eventTimestamp"
            android:layout_alignTop="@id/eventType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="@{eventData.timestamp.toString()}"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/eventOrigin"
            android:layout_alignTop="@id/eventTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            android:text="@{eventData.origin}"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

</layout>